    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Selecciona tus áreas de interés"
        android:padding="10dp"
        android:layout_marginBottom="30dp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_belleza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_belleza" />
            <TextView
                android:layout_height="40dp"
                android:text="Salud y belleza"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_viajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_viajes" />
            <TextView
                android:layout_height="40dp"
                android:text="Viajes"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@mipmap/im_deporte"
                android:id="@+id/img_deporte" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Deporte"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_teatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_teatro" />
            <TextView
                android:layout_height="40dp"
                android:text="Teatro"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:id="@+id/textView"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_redes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_redes" />
            <TextView
                android:layout_height="40dp"
                android:text="Redes Sociales"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_cine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_cine" />
            <TextView
                android:layout_height="40dp"
                android:text="Cine"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_educacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_educacion" />
            <TextView
                android:layout_height="40dp"
                android:text="Educación"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_gastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_gastro" />
            <TextView
                android:layout_height="40dp"
                android:text="Gastronomía"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <ImageButton
				android:id="@+id/img_musica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:src="@mipmap/im_musica" />
            <TextView
                android:layout_height="40dp"
                android:text="Música"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView2" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>